	private int tries;
	
	Image pendu = new ImageIcon("pendu.png").getImage();
	
	public Animation(int x, int y){
		this.x = x;
		this.y = y;
		this.tries = 0;
		
	}
	
	public void chooseImage(){
		
	}
	
	public void draw(Graphics g){
		g.drawImage(img, x, y, null);
	}
}