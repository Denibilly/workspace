package game;

import java.util.*;
import java.awt.*;
import java.io.*;



public class File {

	ArrayList<String> lines;
	
	public File(String p){
		BufferedReader reader = new BufferedReader(new FileReader(p));
		ArrayList<String> lines = new ArrayList<>();
		String line = null;
		while ((line = reader.readLine()) != null) {
		    lines.add(line);
		}
		reader.close();
	}
	
