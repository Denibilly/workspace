package game;

import java.util.*;

public class MysteryWord {
	
	String word;
	HashSet<String> alphabet;
	
	public MysteryWord(String w){
		word = w;
		alphabet = new HashSet<String>();
	}
	
	public void displayGame(){
		
		// DEBUG
		System.out.println("DEBUG, le mot est:\n"+word);
		// DEBUG
		
		for(int i=0; i<word.length(); i++){
			String s = word.charAt(i)+"";
			if(alphabet.contains(s)){
				System.out.print(" "+s);	
			}
			else
				System.out.print(" _");
		}
		System.out.println("\n\nUne lettre?");		
	}
	
	public void displayTries(){
		System.out.println("Voici les lettres déjà essayées :");
		for (Iterator<String> it = alphabet.iterator(); it.hasNext(); ) {
	        String f = it.next();
	        System.out.print(f+" - ");
	    }
		System.out.println("");
	}
	
	public void guess(Scanner inputReader){
		
		String input="";
				
		while(input.length() > 1 || input == ""){
			displayTries();
			displayGame();
			inputReader = new Scanner(System.in);
			input = inputReader.nextLine();
		}
		
		if(alphabet.contains(input)){
			System.out.println("Vous avez déjà essayé cette lettre. \n");
		}
		else if(word.toLowerCase().contains(input)){
			System.out.println("Vous avez trouvé une lettre, bien joué! \n");
		}
		
		alphabet.add(input);
	}
	
	public boolean end(){
		for(int i=0; i< word.length(); i++){
			if(!alphabet.contains( word.charAt(i)+"") )
				return false;
		}
		return true;
	}

}
